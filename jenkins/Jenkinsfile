pipeline {
    agent any

    tools {
        maven 'Maven'   // Must match your Jenkins Global Tool Configuration
        // Optional: add JDK if needed
    }

    environment {
        DOCKER_IMAGE = "rukevweubio/java-app"
        IMAGE_TAG = "latest"
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
                echo "Checkout completed successfully"
            }
        }

        stage('Build with Maven') {
            steps {
                dir('jenkins') {   
                    sh 'mvn clean package'
                }
                echo "Maven build completed successfully"
            }
        }

        stage('Run Tests') {
            steps {
                dir('jenkins') {   
                    sh 'mvn test'
                }
                echo "Tests ran successfully"
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("${DOCKER_IMAGE}:${IMAGE_TAG}", "-f jenkins/Dockerfile jenkins")
                    echo "Docker image built successfully"
                }
            }
        }

        stage('Push to DockerHub') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', 'dockerhub-credentials') {
                        docker.image("${DOCKER_IMAGE}:${IMAGE_TAG}").push()
                        echo "Docker image pushed to DockerHub successfully"
                    }
                }
            }
        }

        stage('Run Docker Image') {
            steps {
                script {
                    sh "docker pull ${DOCKER_IMAGE}:${IMAGE_TAG}"
                    sh "docker run --rm --name java-app-run ${DOCKER_IMAGE}:${IMAGE_TAG}"
                    echo "Docker container ran successfully"
                }
            }
        }

    }

    post {
        success {
            echo "Pipeline finished successfully"
        }
        failure {
            echo "Pipeline failed. Check the logs for errors"
        }
    }
}
